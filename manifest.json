{
	"name": "GitHub Shortcut Buttons",
	"description": "An extension to make navigation to certain places in GitHub easier.",
	"version": "1.0.0",
	"manifest_version": 3,
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/images/x16.png",
			"32": "/images/x32.png",
			"48": "/images/x48.png",
			"128": "/images/x128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"https://github.com/",
				"https://github.com/dashboard",
				"https://github.com/orgs/*/dashboard"
			],
			"run_at": "document_end",
			"js": ["content-script.js"]
		}
	],
	"icons": {
		"16": "/images/x16.png",
		"32": "/images/x32.png",
		"48": "/images/x48.png",
		"128": "/images/x128.png"
	}
}
